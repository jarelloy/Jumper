<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gameover_text"
        android:layout_width="247dp"
        android:layout_height="112dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:text="Game Over"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="231dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:text="Score"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameover_text" />

    <TextView
        android:id="@+id/editscoretext"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:text="4000"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_text" />

    <Button
        android:id="@+id/savehighscoreBtn"
        android:layout_width="141dp"
        android:layout_height="73dp"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/minecraft"
        android:text="Save Highscore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_text" />

    <Button
        android:id="@+id/mmBtn"
        android:layout_width="142dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:text="Main Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savehighscoreBtn" />

    <EditText
        android:id="@+id/editPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:hint="Enter Player Name"
        android:inputType="text"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editscoretext" />
</androidx.constraintlayout.widget.ConstraintLayout>