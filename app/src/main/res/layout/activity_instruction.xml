<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rotatephone1Image"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_always_landscape_portrait" />

    <ImageView
        android:id="@+id/rotatephone2Image"
        android:layout_width="74dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="116dp"
        android:rotationY="182"
        app:layout_constraintStart_toEndOf="@+id/rotatephone1Image"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_always_landscape_portrait" />

    <TextView
        android:id="@+id/movementinstructionText"
        android:layout_width="259dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:text="@string/movement"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotatephone1Image" />

    <Button
        android:id="@+id/instructionbackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="#FFF4D4"
        android:fontFamily="@font/minecraft"
        android:text="@string/backBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>